#include<iostream>
using namespace std;
//"aaaabbbbccccdddd"
string removeDupe(string s){
    if(s.length()==0){
        return " ";
    }
    char ch=s[0];
    string ans=removeDupe(s.substr(1));
    if(ch==ans[0]){
        return ans;
    }
    return (ch+ans);
}
int main(){
    cout<<removeDupe("aaaabbbbccccdddd")<<endl;
    return 0;
}
